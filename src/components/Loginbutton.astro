---
const {header, color} = Astro.props;
---

<a href="" class={color + ""} >{header}</a>

<style>
  a {
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 0;
  }
  .black{
    background-color: black;
  }
  .white{
    background-color: white;
    color: black;
  }
</style>
