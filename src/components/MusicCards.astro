---
const { header, imagePath } = Astro.props;
---

<article>
  <img src={imagePath} alt="" />
  <h3>Titel</h3>
  <h4>{header}</h4>
  <h5>Song</h5>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    background-color: rgba(101, 96, 96, 0.5);
    padding: 20px;
    border-radius: 8px;
  }
  img {
    width: 100%;
  }
  h3{
    margin-bottom: -10px;
  }
  h5{
    margin-top: -10px;
  }
    
</style>
